<div class="col-md-5 mx-auto shadow p-3">

    <nav class="navbar bg-body-tertiary">
        <div class="container-fluid">
            <h3 class="navbar-brand">Editar Evento</h3>

            <ul class="nav">
                <li class="nav-item">
                    <a class="btn btn-sm btn-secondary" href="/evento"><i class="fa-solid fa-angle-left"></i>
                        Voltar</a>
                </li>
            </ul>
        </div>
    </nav>

    <form method="post" action="/evento/salvar">
        <fieldset>

            <legend>Dados do Evento</legend>

            <div class="mb-3 col-3">
                <label for="id" class="form-label">CÓDIGO</label>
                <input type="number" value="{{evento.id}}" name="id" id="id" class="form-control" readonly>
            </div>

            <div class="row">
                <div class="col mb-3">
                    <label for="nome" class="form-label">NOME</label>
                    <input value="{{evento.nome}}" type="text" id="nome" name="nome" class="form-control" required>
                </div>
                <div class="col mb-3">
                    <label for="descricao" class="form-label">DESCRICAO</label>
                    <input value="{{evento.descricao}}" type="text" id="descricao" name="descricao" class="form-control"
                        required>
                </div>
            </div>

            <div class="row">
                <div class="col mb-3">
                    <label for="data_evento" class="form-label">DATA DO EVENTO</label>
                    <input value="{{evento.data_evento}}" type="text" id="data_evento" name="data_evento"
                        class="form-control" required>
                </div>
                <div class="col mb-3">
                    <label for="cidade" class="form-label">CIDADE</label>
                    <input value="{{evento.cidade}}" type="text" id="cidade" name="cidade" class="form-control"
                        required>
                </div>
            </div>
            <div class="mb-3">
                <label for="endereco" class="form-label">ENDEREÇO</label>
                <input value="{{evento.endereco}}" type="text" name="endereco" id="endereco" class="form-control"
                    required>
            </div>

            <button type="submit" class="btn btn-success">Salvar</button>

        </fieldset>
    </form>
</div>