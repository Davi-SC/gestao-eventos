<div class="container-sm">
    <nav class="navbar bg-body-tertiary">
        <div class="container-fluid">
            <h3 class="navbar-brand">Eventos</h3>

            <ul class="nav">
                <li class="nav-item">
                    <a class="btn btn-sm btn-primary mx-2" href="/evento/cadastrar"><i class="fa-solid fa-plus"></i>
                        Cadastrar evento</a>
                </li>
                <li class="nav-item">
                    <a class="btn btn-sm btn-secondary" href="/admin"><i class="fa-solid fa-angle-left"></i> Voltar</a>
                </li>
            </ul>
        </div>
    </nav>

    <table class="table table-striped">
        <tr>
            <th class="col-1">ID</th>
            <th class="col-2">NOME</th>
            <th class="col-5">DESCRIÇÃO</th>
            <th class="col-2">DATA DO EVENTO</th>
            <th class="col-2">CIDADE</th>
            <th class="col-2">ENDERECO</th>
            <th class="col-2">INGRESSOS</th>
            <th class="col-2">

            </th>
        </tr>
        {{#each eventos}}
            <tr>
                <td>{{id}}</td>
                <td>{{nome}}</td>
                <td>{{descricao}}</td>
                <td>{{data_evento}}</td>
                <td>{{cidade}}</td>
                <td>{{endereco}}</td>

                <td>
                    <a class="btn btn-sm btn-outline-primary" href="ingresso/comprar/{{id}}"><iclass="fa-solid "></i> Comprar ingressos</a>
                </td>
            </tr>
        {{/each}}

    </table>

</div>