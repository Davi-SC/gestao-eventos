<div class="container-sm">
    <nav class="navbar bg-body-tertiary">
        <div class="container-fluid">
            <h3 class="navbar-brand">Ingressos do Eventos</h3>

            <ul class="nav">
                <li class="nav-item">
                    <a class="btn btn-sm btn-primary mx-2" href="/ingresso/cadastrar/{{evento_id}}"><i
                            class="fa-solid fa-plus"></i>
                        Cadastrar ingressos</a>
                </li>
            </ul>
        </div>
    </nav>

    <table class="table table-striped">
        <tr>
            <th class="col-1">TIPO</th>
            <th class="col-2">PREÇO</th>
            <th class="col-2">QUANTIDADE</th>
            <th class="col-2">

            </th>
        </tr>
        {{#each ingressos}}
            <tr>
                <td>{{tipo}}</td>
                <td>{{preco}}</td>
                <td>{{quantidade}}</td>
                <td>
                    <a class="btn btn-sm btn-outline-primary" href="/ingresso/editar/{{id}}">
                        Editar</a>
                    <a class=" btn btn-sm btn-outline-primary" href="/ingresso/excluir/{{id}}"><i
                            class="fa-solid fa-trash-can"></i> Excluir</a>
                </td>
            </tr>
        {{else}}
            <tr>
                <td colspan="4" class="text-center">Nenhum ingresso disponível para este evento.</td>
            </tr>
        {{/each}}

    </table>

</div>