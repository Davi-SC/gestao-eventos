<div class="col-md-5 mx-auto shadow p-3">
    <form method="post" action="/ingresso/cadastrar">
        <fieldset>
            <legend>Cadastro de Ingressos</legend>

            <div class="row">
                <div class="col mb-3">
                    <label for="disabledTextInput" class="form-label">TIPO</label>
                    <input type="text" id="disabledTextInput" name="tipo" class="form-control" required>
                </div>
                <div class="col mb-3">
                    <label for="disabledTextInput" class="form-label">PRECO</label>
                    <input type="number" id="disabledTextInput" name="preco" class="form-control" required>
                </div>
                <div class="col mb-3">
                    <label for="disabledTextInput" class="form-label">QUANTIDADE</label>
                    <input type="number" id="disabledTextInput" name="quantidade" class="form-control" required>
                </div>
                <input type="hidden" name="evento_id" value="{{evento_id}}">
            </div>

            <button type="submit" class="btn btn-success">Salvar</button>
        </fieldset>
    </form>
</div>